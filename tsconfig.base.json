{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2017",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@db-client/aws-postgres": [
        "packages/db-clients/postgres-aws-db-client/src/index.ts"
      ],
      "@db-client/dynamo-db": [
        "packages/db-clients/dynamo-db-client/src/index.ts"
      ],
      "@db-client/postgres": [
        "packages/nest-shared/nest-postgres-db-client/src/index.ts"
      ],
      "@domains/db-client": [
        "packages/domains/db-client/src/index.ts"
      ],
      "@domains/nest-dto": [
        "packages/domains/nest-dto/src/index.ts"
      ],
      "@domains/nest-repository": [
        "packages/domains/nest-repository/src/index.ts"
      ],
      "@helpers/authorization": [
        "packages/serverless-utils/src/lib/authorization/index.ts"
      ],
      "@helpers/common": [
        "packages/serverless-utils/src/lib/common/index.ts"
      ],
      "@helpers/db-client": [
        "packages/serverless-utils/src/lib/db-client/index.ts"
      ],
      "@helpers/schemas": [
        "packages/serverless-utils/src/lib/schemas/index.ts"
      ],
      "@helpers/validation": [
        "packages/serverless-utils/src/lib/validation/index.ts"
      ],
      "@nest-shared/auth-module": [
        "packages/nest-shared/nest-auth-module/src/index.ts"
      ],
      "@nest-shared/cart-module": [
        "packages/nest-shared/nest-cart-module/src/index.ts"
      ],
      "@nest-shared/cart-repository": [
        "packages/nest-shared/nest-cart-repository/src/index.ts"
      ],
      "@nest-shared/order-module": [
        "packages/nest-shared/nest-order-module/src/index.ts"
      ],
      "@nest-shared/order-repository": [
        "packages/nest-shared/nest-order-repository/src/index.ts"
      ],
      "@nest-shared/user-module": [
        "packages/nest-shared/nest-user-module/src/index.ts"
      ]
    },
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
